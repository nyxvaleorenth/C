    unistd: sleep

define:
    WIDTH
    HEIGHT
    ALIVE
    DEAD

define:
    cells, char 2d array        current generation
    nextCells, char 2d array    next generation

function declaration:
    initializeGrid
    printGrid
    calculateNextGeneration
    copyGrid
    clearScreen

